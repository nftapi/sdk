{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
